{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "outDir": "../../dist/apps/client",
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@widgets/*": ["src/widgets/*"],
      "@service": ["../service/src"]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../service/tsconfig.app.json"
    }
  ]
}